@model gestionNavette.Models.demande
@{
    ViewBag.Title = "newDemande";
}


<div class="row justify-content-md-center" style=" margin-top:50px;">
    <div class="col col-lg-6" style=" margin-left: 200px; padding: 50px; padding-left: 60px;padding-top:35px; background-color: #fff; border-radius: 8px;">
        <h3 style="color:#000;">Demande</h3>
        @using (Html.BeginForm("createDemande", "Abonnement", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(s => s.villeD, new { @Class = "label label-primary" })
                @Html.TextBoxFor(s => s.villeD, new { @Value = TempData["vd"], @Class = "form-control" })
                @Html.ValidationMessageFor(s => s.villeD, "", new { @Class = "alert-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.villeA, new { @Class = "label label-primary" })
                @Html.TextBoxFor(s => s.villeA, new { @Value = TempData["va"], @Class = "form-control" })
                @Html.ValidationMessageFor(s => s.villeA, "", new { @Class = "alert-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.heureD, new { @Class = "label label-primary" })
                @Html.TextBoxFor(s => s.heureD, new { @Value = TempData["hd"], @Class = "form-control" })
                @Html.ValidationMessageFor(s => s.heureD, "", new { @Class = "alert-danger" })
            </div>


            <input class="btn btn-primary" type="submit" name="name" value="Demander" />
        }
</div>
</div>